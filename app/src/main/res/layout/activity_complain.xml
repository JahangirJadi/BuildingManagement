<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/statusNotPaidColor"
    android:orientation="vertical"
    tools:context=".Activities.ComplainActivity">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_complain_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:hint="Complain Subject"
            android:maxLength="25"
            android:padding="@dimen/_8sdp"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold

" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_complain_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="start"
            android:hint="Complain Description"
            android:maxLength="150"

            android:maxLines="5"
            android:minHeight="@dimen/_140sdp"
            android:padding="@dimen/_8sdp"
            android:textAlignment="viewStart"
            android:textSize="@dimen/_16sdp" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_submit_complain"
        android:text="Submit"
        android:padding="@dimen/_8sdp"
        android:textSize="@dimen/_16sdp"
        android:layout_margin="@dimen/_12sdp"
        android:background="@android:color/white"/>

</LinearLayout>